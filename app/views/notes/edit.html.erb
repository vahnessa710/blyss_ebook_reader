<div class="flex h-screen bg-gray-50 dark:bg-gray-900">
  <!-- Main Content -->
  <div class="flex-1 overflow-y-auto p-6 sm:p-8">

<h1 class="text-2xl font-bold mb-4 text-white">Edit Note</h1>

<%= form_with model: [@user, @note], local: true do |form| %>

  <div class="mb-4">
    <%= form.label :title, class: "block text-gray-700 dark:text-gray-200 font-medium mb-2" %>
    <%= form.text_field :title, class: "w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring focus:border-blue-300 dark:bg-gray-800 dark:text-white" %>

    <% if @note.errors[:title].any? %>
      <div class="text-red-500 text-sm mt-2">
        <%= @note.errors[:title].first %>
      </div>
    <% end %>
  </div>

  <div class="mb-4">
    <%= form.label :body, class: "block text-gray-700 dark:text-gray-200 font-medium mb-2" %>
    <%= form.text_area :body, rows: 5, class: "w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring focus:border-blue-300 dark:bg-gray-800 dark:text-white" %>

    <% if @note.errors[:body].any? %>
      <div class="text-red-500 text-sm mt-2">
        <%= @note.errors[:body].first %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.submit "Update Note", class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition" %>
  </div>

<% end %>

<%= link_to 'Back to Notes', user_notes_path(@user) %>
