<div class="flex h-screen bg-gray-50 dark:bg-gray-900">
  <!-- Main Content -->
  <div class="flex-1 overflow-y-auto p-6 sm:p-8">
    <div class="max-w-3xl mx-auto mt-12"> <!-- Increased top margin -->
      <!-- Back button -->
      <div class="mb-8"> <!-- Increased bottom margin -->
        <%= link_to user_notes_path(current_user), class: "inline-flex items-center text-indigo-600 dark:text-indigo-400 hover:text-indigo-800 dark:hover:text-indigo-300 transition" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Notes
        <% end %>
      </div>

      <!-- Note Card -->
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm overflow-hidden border-l-4 border-indigo-500">
        <!-- Note Header -->
        <div class="px-8 py-6 border-b border-gray-200 dark:border-gray-700"> <!-- Increased padding -->
          <div class="flex justify-between items-start">
            <h1 class="text-2xl font-bold text-gray-800 dark:text-white mb-2 py-4"> <!-- Added bottom margin -->
              <%= @note.title %>
            </h1>
          
          </div>
          
          <!-- Timestamp -->
          <div class="text-sm text-gray-500 dark:text-gray-400 py-2">
            Created <%= time_ago_in_words(@note.created_at) %> ago
            <% if @note.updated_at != @note.created_at %>
              â€¢ Updated <%= time_ago_in_words(@note.updated_at) %> ago
            <% end %>
          </div>
        </div>
        
        <!-- Note Content -->
        <div class="px-8 py-6"> <!-- Increased padding -->
          <div class="prose max-w-none text-gray-700 dark:text-gray-300 py-8">
            <%= simple_format(@note.body) %>
          </div>
        </div>
        
        <!-- Footer Actions -->
        <div class="px-8 py-5 bg-gray-50 dark:bg-gray-700/50 border-t border-gray-200 dark:border-gray-700 flex justify-between items-center"> <!-- Increased padding -->
          <div class="text-sm text-gray-500 dark:text-gray-400 py-8">
            Note ID: <%= @note.id %>
          </div>
          
          <div class="flex space-x-4"> <!-- Increased space between buttons -->
            <%= button_to user_note_path(current_user, @note),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this note?" },
              class: "cursor-pointer px-4 py-2.5 text-sm rounded-lg border border-red-500 text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 transition",
              title: "Delete" do %>
              Delete Note
            <% end %>
            
            <%= link_to "Edit Note", edit_user_note_path(current_user, @note), class: "px-5 py-2.5 text-sm rounded-lg bg-indigo-600 text-white hover:bg-indigo-700 transition" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
