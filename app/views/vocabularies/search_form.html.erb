<div class="flex items-start justify-center min-h-screen pt-16 px-4 sm:px-6"> <!-- Changed items-center to items-start and added pt-16 -->
  <div class="bg-white dark:bg-gray-800 p-6 sm:p-8 rounded-xl shadow-sm hover:shadow-md transition-all duration-300 max-w-md w-full border border-gray-200 dark:border-gray-700 mx-auto mt-10"> <!-- Added mt-8 -->
    <%= form_with url: search_vocabularies_path, method: :get, local: true, class: "space-y-5" do |form| %>
      <div>
        <h2 class="text-xl font-bold text-gray-800 dark:text-white mb-1">Word Lookup</h2>
        <p class="text-sm text-gray-500 dark:text-gray-400">Search for definitions and save to your vocabulary</p>
      </div>

      <div class="space-y-3">
        <%= form.label :keywords, "Search term", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <div class="relative">
          <%= form.text_field :keywords, required: true, 
              class: "w-full pl-24 px-8 py-3 pr-4 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 dark:focus:ring-purple-500 focus:border-indigo-500 dark:focus:border-purple-500 transition text-gray-700 dark:text-gray-300 dark:bg-gray-700 placeholder-gray-400 dark:placeholder-gray-500",
              placeholder: "Enter a word or phrase..." %>
          <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none ml-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
        </div>
      </div>

      <div class="pt-2">
        <%= form.submit "Search Word", 
            class: "cursor-pointer w-full flex justify-center items-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-indigo-600 dark:bg-purple-600 hover:bg-indigo-700 dark:hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:focus:ring-purple-500 transition-colors duration-200" %>
      </div>

      <div class="text-center pt-2">
        <p class="text-xs text-gray-500 dark:text-gray-400 inline-flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-indigo-500 dark:text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          Powered by dictionary API
        </p>
      </div>
    <% end %>
    <%= link_to vocabularies_path, class: "mt-10 flex items-center text-gray-600 hover:text-gray-900 transition-colors" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Back to My Vocabulary Journal
      <% end %>
  </div>
</div>