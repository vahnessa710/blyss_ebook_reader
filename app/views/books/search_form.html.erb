<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 py-10 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header with back button -->
    <div class="flex justify-between items-center mb-8">
      <%= link_to books_path, class: "flex items-center text-indigo-600 hover:text-indigo-800 transition-colors" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Back to My Library
      <% end %>
    </div>

    <!-- Main content -->
    <div class="space-y-8">
      <!-- Page title with book icon -->
      <div class="text-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-indigo-500 mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
        <h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-1">Discover New Books</h1>
        <p class="text-gray-600">Search our collection of thousands of free e-books</p>
      </div>

      <!-- Search form -->
      <div class="bg-white p-6 rounded-2xl shadow-lg max-w-md mx-auto">
        <%= form_with url: search_books_path, method: :get, local: true, class: "space-y-4" do |form| %>
          <div class="space-y-2">
            <%= form.label :keywords, "Search by title, author or keyword", class: "block text-sm font-medium text-gray-700" %>
            <div class="relative">
              <%= form.text_field :keywords, required: true, 
                  class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition text-gray-700",
                  placeholder: "e.g. Frankenstein, Jane Austen..." %>
              <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
              </div>
            </div>
          </div>

          <div>
            <%= form.submit "Search Books", 
                class: "cursor-pointer w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2.5 px-4 rounded-lg transition duration-300" %>
          </div>
        <% end %>
      </div>

      <!-- Results section -->
      <% if @books && @books.any? %>
        <div class="mt-8 bg-white p-6 md:p-8 rounded-2xl shadow-lg">
          <div class="mb-6">
            <h2 class="text-xl md:text-2xl font-semibold text-gray-800">Search Results</h2>
            <% if @keywords.present? %>
              <p class="text-gray-600 mt-1">Showing results for: <span class="font-medium text-indigo-600">"<%= @keywords %>"</span></p>
            <% end %>
          </div>

          <div class="space-y-6">
            <% @books.each do |book| %>
              <div class="border border-gray-200 rounded-xl p-5 hover:shadow-md transition-shadow">
                <div class="flex flex-col md:flex-row gap-5">
                  <!-- Book cover from API -->
                  <% if book['formats'] && book['formats']['image/jpeg'] %>
                    <div class="flex-shrink-0 w-32 h-48 rounded-lg overflow-hidden border border-gray-200">
                      <img src="<%= book['formats']['image/jpeg'] %>" alt="<%= book['title'] %> cover" class="w-full h-full object-cover">
                    </div>
                  <% end %>

                  <!-- Book details -->
                  <div class="flex-grow">
                    <h3 class="text-lg md:text-xl font-bold text-gray-800 mb-1"><%= book['title'] %></h3>
                    
                    <% if book['authors'].present? %>
                      <p class="text-gray-600 mb-2">
                        <span class="font-medium">By:</span> 
                        <%= book['authors'].map { |author| author['name'] }.join(', ') %>
                      </p>
                    <% end %>

                    <% if book['subjects'].present? %>
                      <div class="mb-3">
                        <div class="flex flex-wrap gap-2">
                          <% book['subjects'].first(3).each do |subject| %>
                            <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded-full"><%= subject %></span>
                          <% end %>
                        </div>
                      </div>
                    <% end %>

                    <% if book['summaries'].present? %>
                      <p class="text-gray-700 mb-4 line-clamp-2"><%= book['summaries'].join(' ') %></p>
                    <% end %>

                    <%= button_to "Add to My Library", books_path(book: { gutendex_id: book['id'] }), 
                        method: :post, 
                        class: "bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-6 rounded-lg transition" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% elsif @books %>
        <div class="mt-8 bg-white p-8 rounded-2xl shadow-lg text-center max-w-md mx-auto">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="text-xl font-medium text-gray-800 mb-2">No books found</h3>
          <p class="text-gray-600">Try different search terms or browse our collection</p>
        </div>
      <% else %>
        <div class="mt-8 bg-white p-8 rounded-2xl shadow-lg text-center max-w-md mx-auto">
          <h3 class="text-xl font-medium text-gray-800 mb-2">Ready to explore?</h3>
          <p class="text-gray-600">Enter a book title, author name, or keyword above to begin your search</p>
        </div>
      <% end %>
    </div>
  </div>
</div>