<!-- app/views/books/show.html.erb -->
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- Header with back button -->
    <div class="flex justify-between items-center mb-8">
      <%= link_to books_path, class: "flex items-center text-gray-600 hover:text-gray-900 transition-colors" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
        </svg>
        Back to My Bookshelf
      <% end %>
    </div>

    <!-- Main Content with Sidebar -->
    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Left Column - Main Book Content -->
      <div class="lg:flex-1">
        <!-- Book Card -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <!-- Book Cover Placeholder -->
          <div class="bg-gradient-to-r from-indigo-500 to-purple-600 h-48 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 text-white opacity-80" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>

          <!-- Book Details -->
          <div class="p-6 sm:p-8">
            <div class="flex justify-between items-start">
              <div>
                <h2 class="text-2xl font-bold text-gray-900 mb-2"><%= @book.title %></h2>
                <p class="text-indigo-600 font-medium mb-4">by <%= @book.author %></p>
              </div>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
                Available
              </span>
            </div>

            <!-- Description -->
            <div class="mt-6">
              <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Description</h3>
              <p class="mt-2 text-gray-600 leading-relaxed"><%= @book.description %></p>
            </div>

            <!-- Action Button -->
            <div class="mt-8">
              <%= link_to @resume_chapter ? "Continue Reading" : "Start Reading", 
            book_chapter_path(@book, @current_chapter), 
            class: "w-full flex items-center justify-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 transition-all transform hover:-translate-y-0.5" %>
                        </div>
                      </div>
                    </div>
                  </div>

      <!-- Right Column - Sidebar -->
      <div class="lg:w-80 xl:w-96 space-y-6">
        <!-- Book Details Card -->
        <div class="bg-white rounded-lg shadow p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Book Details</h3>
          <div class="space-y-3">
            <div>
              <span class="text-sm text-gray-500">Pages</span>
              <p class="text-gray-700">320</p>
            </div>
            <div>
              <span class="text-sm text-gray-500">Published</span>
              <p class="text-gray-700">2023</p>
            </div>
            <div>
              <span class="text-sm text-gray-500">Category</span>
              <p class="text-gray-700">Fiction</p>
            </div>
            <div>
              <span class="text-sm text-gray-500">ISBN</span>
              <p class="text-gray-700">978-3-16-148410-0</p>
            </div>
            <div>
              <span class="text-sm text-gray-500">Publisher</span>
              <p class="text-gray-700">Example Publishing</p>
            </div>
          </div>
        </div>

        <!-- Reading Progress Card -->
        <div class="bg-white rounded-lg shadow p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Reading Progress</h3>
          <div class="space-y-4">
            <div>
              <div class="flex justify-between text-sm text-gray-500 mb-1">
                <span>Completion</span>
                <span><%= @book.progress_percentage(current_user) %>%</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="bg-indigo-600 h-2 rounded-full" style="width: <%= @book.progress_percentage(current_user) %>%"></div>
              </div>
            </div>
            <div class="text-sm text-gray-500">
              <% if @book.progress_percentage(current_user) > 0 %>
                You've completed <%= @book.progress_percentage(current_user) %>% of this book
              <% else %>
                You haven't started reading this book yet.
              <% end %>
            </div>
            <div class="pt-4 border-t border-gray-200">
              <h4 class="text-sm font-medium text-gray-900 mb-2">Last Read</h4>
              <p class="text-sm text-gray-500">
                <% if @book.progress_percentage(current_user) > 0 %>
                  <% last_read = @book.last_read_at_for(current_user) %>
                  <%= last_read ? last_read.strftime("%B %d, %Y") : "Recently" %>
                <% else %>
                  Not started
                <% end %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>